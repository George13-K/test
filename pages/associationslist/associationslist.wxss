.navi {
  height: 250rpx;  
  width: 100%;
  background-color: rgb(255, 255, 255);
  position: fixed;
  top: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  z-index: 1;
}

.navitext {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: 1000;
  position: relative;
  margin-top: 50rpx;
}

.scrolling-text {
  color: #ff4500;
  font-size: 70rpx;
  animation: scroll-flash 2s linear infinite;
  margin-bottom: 10rpx;
  position: relative;
  left: 9rpx;
  top: -9rpx;
}

.static-text {
  color: #000000;
  font-size: 50rpx;
}

@keyframes scroll-flash {
  0% {
    transform: translateX(0);
    opacity: 1;
  }
  25% {
    opacity: 0.5;
  }
  50% {
    transform: translateX(-5px);
    opacity: 1;
  }
  75% {
    opacity: 0.5;
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

.add-circle {
  position: fixed;
  top: 416rpx;
  left: 599rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #000000;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgb(0, 0, 0);
}

.add-text {
  font-size: 60rpx;
  color: white;
}
.back-icon {
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx; 
  color: #000000; 
  z-index: 10;
}

.back-symbol {
  font-size: 36rpx; 
