.container {
  padding: 20rpx;
}

.header {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.form {
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 30rpx;
}

label {
  font-size: 28rpx;
  color: #333;
}

input, textarea {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}

textarea {
  height: 100rpx; 
  resize: none;  
}

button {
  background-color: #007aff;
  color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
}

.avatar-section {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #ccc;  
  overflow: hidden;
  margin: 0 auto 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2); 
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.select-text {
  position: absolute;
  color: white;
  font-size: 24rpx;
  text-align: center;
  line-height: 1.5;
}
